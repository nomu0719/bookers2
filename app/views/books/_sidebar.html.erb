
  <div class="col-md-3 ">
    <div class="sidebar" >
      <h2>User info</h2>
      <%= attachment_image_tag user, :profile_image,  fallback: "no_image.jpg", size:'100x100'  %>
      <div class="d-flex">
       <p>name :</p>
       <%= user.name %>
       </div>
       <div class="d-flex">
       <p>introduction :</p>
       <%= user.introduction %>
       </div>
      
       <%= link_to edit_user_path(user) do %>
       <i class="fas fa-user-cog"></i>
       <% end %>
       

<h2>New book</h2>
       <%= form_with model: book,  local:true do |f| %>
       <p>Title</p>
      <%= f.text_field :title %>

       <p>Opinion</p>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
      <% end %>
      
         </div>

  </div>
