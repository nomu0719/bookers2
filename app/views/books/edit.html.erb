<div class="row-10 mx-auto mt-5" >
<h1>Editing Book</h1>
<%= render 'books/error_message', model:@book %>

<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title,class:"col-8" %>

  <h4>Opinion</h4>
  <%= f.text_area :body,class:"col-8" %>
  <div class="text-center ">
  <%= f.submit 'Update Book' %>
<% end %>
<br>
<%= link_to "Show",book_path(params[:id])%>
|
<%= link_to "Back",books_path %>

</div>

</div>