<div class="container px-5 px-sm-0">
<div class="row">
<%= render 'books/sidebar', book: @book, user: @user  %>

<div class="col-md-8 offset-md-1">

<h2>Books</h2>

      <table class="table">
          <thead>
              <tr>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan="3"></th>
              </tr>
          </thead>
          <tbody>
            <% if @posted_book.present? %>
              <% @books.each do |book| %>
                <tr class="book_index">
                    <th>
                      <%= link_to user_path(book.user.id) do %>
                        <%= attachment_image_tag  book.user, :profile_image, format: 'jpeg', size: "40x40", fallback: "no_image.jpg", class:"profile_image" %></th>
                      <% end %>
                    <th><%= link_to book.title, book_path(book.id) %></th>
                    <th> <%= book.body %></th>
                </tr>
              <% end %>
            <% end %>  
          </tbody>
      </table>

</div>
</div>
</div>
