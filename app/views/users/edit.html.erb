<div class="container">
<div class="row">
<div class ="col-md-8 mx-auto">
<h1>User info</h1>
<%= render 'books/error_message', model:@user %>
 <%= form_with model:@user, local:true do |f| %>
 <label for="inputName">Name</label><br>
 <%= f.text_field :name, class:"form-control", autofocus: true, id:"inputName",placeholder:"名前" %><br>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%><br>
  <label for="inputImage">Image</label><br>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %><br>
  <label for="inputIntroduction">Introduction</label><br>
  <%= f.text_area :introduction, class:"form-control", autofocus: true, id:"inputIntroduction" %><br>
 
 <%= f.submit "Update User" %>
<% end %>
</div>
</div>

</div>